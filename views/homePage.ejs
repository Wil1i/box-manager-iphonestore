<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <%- include("./templates/header.ejs", {title : "آیفون استور", css : "homePage"}) %>
</head>
<body>
  <%- include("./templates/sideBar.ejs") %>
  <div id="check-container">
    <div>
      <h1><%= header || 'آخرین درخواست‌ها' %></h1>
    </div>
    <% if (requests[0]) { %>
      <% for(let i = 0; i < 10; i++){ %>
        <% if(requests[i]){ %>
          <%- include("./templates/request.ejs", {request : requests[i]}) %>
        <% }else{break;} %>
      <% } %>
    <% }else{ %>
      <div class="err">درخواستی یافت نشد.</div>
    <% } %>
  </div>
</body>
</html>